<html>

<head>
    <%- include('./adminHeader', {}); %>
        <hr>
        <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
        <link rel="stylesheet" href="/index/css/admin_teachers.css" media="screen" type="text/css" />
    <script>
        function setaction(tch_id, action) {
            document.getElementById('action').value = action;
            document.getElementById('tch_id').value = tch_id;
            if(action === 'delete'){
                document.getElementById(tch_id).style.display = 'none';
                document.getElementById('form').submit();
            }
            else if(action === 'update'){
                document.getElementById('form').submit();
            }
        }
    </script>
</head>

<body>
    <br>
    <br>
    <center>
        <form method="post" id="form">
            <input type="hidden" name="action" id="action">
            <input type="hidden" name="tch_id" id="tch_id">
        </form>
        <div class="row" style="height: 50px;"></div>
        <div class="row" style="height: inherit; background-color: lightgray;">

            <ul class="responsive-table" id="sub_table">
                <li class="table-header" style="font-weight: bold;">
                    <div class="col col-1">Teacher ID</div>
                    <div class="col col-2">First Name</div>
                    <div class="col col-3">Last Name</div>
                    <div class="col col-4">Contact</div>
                    <div class="col col-5">Email</div>
                    <div class="col col-6">Facebook ID</div>
                    <div class="col col-7">LinkedIn ID</div>
                    <div class="col col-8">Designation</div>
                    <div class="col col-9">Update</div>
                    <div class="col col-10">Delete</div>
                </li>

                <% for( var i=0; i<teacher.length && teacher !== undefined; i++){ %>
                <li class="table-row" style="font-family: 'Ubuntu';" id="<%= teacher[i].tch_id %>">
                    <div class="col col-1" data-label="Teacher ID">
                        <%= teacher[i].tch_id %>
                    </div>
                    <div class="col col-2" data-label="First Name">
                        <%= teacher[i].f_name %>
                    </div>
                    <div class="col col-3" data-label="Last Name">
                        <%= teacher[i].l_name %>
                    </div>
                    <div class="col col-4" data-label="Contact">
                        <%= teacher[i].contact %>
                    </div>
                    <div class="col col-5" data-label="Email">
                        <%= teacher[i].email %>
                    </div>
                    <div class="col col-6" data-label="Facebook ID">
                        <%= teacher[i].facebook_id %>
                    </div>
                    <div class="col col-7" data-label="GooglePlus ID">
                        <%= teacher[i].googleplus_id %>
                    </div>
                    <div class="col col-8" data-label="Designation">
                        <%= teacher[i].designation %>
                    </div>
                    <div class="col col-10" data-label="Update" style="padding-left: 5px;">
                        <button class="button" style="padding-top: 2px;" onclick="setaction('<%= teacher[i].tch_id %>', 'update')">
                            <span>Update</span>
                        </button>

                    </div>
                    <div class="col col-11" data-label="Delete" style="padding-left: 5px;">
                        <button class="button" style="padding-top: 2px;" onclick="setaction('<%= teacher[i].tch_id %>', 'delete')">
                            <span>Delete</span>
                        </button>
                    </div>

                </li>
                <% } %>





            </ul>
        </div>
    </center>
</body>

</html>