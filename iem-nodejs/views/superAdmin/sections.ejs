<html>

<head>
    <%- include('./adminHeader', {}); %>
        <hr>
        <style>
            #sub_btn {
                padding: 20px 50px;
                border-radius: 12px;
                background-color: white;
                color: black;
                border: 2px solid #008CBA;
                font-size: 18px;
                cursor: pointer;
                text-align: center;
            }

            #sub_btn:hover {
                box-shadow: 0 12px 16px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19);
                background-color: #008CBA;
                color: white;
            }

            #sub_btn:active {
                background-color: #008CBA;
                transform: translateY(4px);
            }
        </style>
        <script>
            <% if(err !== ''){ %>
            alert('<%= err %>');
            <% } %>
            <% if(!user.isLoggedIn){ %>
            function onsubmit() {
                window.open('/superAdmin/', '_self')
            }
            
            document.getElementById('loginform').onsubmit = onsubmit();
            var username = prompt("USERNAME","Enter your username here");
            var password = prompt("PASSWORD","Enter your Password");
            document.getElementById('username').value = username;
            document.getElementById('password').value = password;
            document.getElementById('loginform').submit();
            <% } %>
        </script>
</head>

<body>
    <br>
    <br>
    <form action="superAdmin/login" id="loginform" method="post">
        <input type="hidden" name="username">
        <input type="hidden" name="password">
    </form>
    <center>
        <div style="width: 400px; height:420px;">
            <br>
            <div style="padding-top: 2%;">
                <button value="add_user" id="sub_btn" onclick="window.location = '/superAdmin/add-user' ">
                    <strong>Add User</strong>
                </button>
            </div>
            <br>
            <div style="padding-top: 2%;">
                <button value="student" id="sub_btn" onclick="window.location = '/superAdmin/students' ">
                    <strong>Students</strong>
                </button>
            </div>
            <br>
            <div style="padding-top: 2%;">
                <button value="teacher" id="sub_btn" onclick="window.location = '/superAdmin/teachers' ">
                    <strong>Teachers</strong>
                </button>
            </div>
            <br>
            <div style="padding-top: 2%;">
                <button value="subjects" id="sub_btn" onclick="window.location = '/superAdmin/subjects' ">
                    <strong>Subjects</strong>
                </button>
            </div>
            <br>
        </div>
    </center>
</body>

</html>