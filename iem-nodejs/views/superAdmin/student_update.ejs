<html>

<head>
    <%- include('./adminHeader', {}); %>
        <hr>
        <link href="https://fonts.googleapis.com/css?family=Ubuntu" rel="stylesheet">
        <link rel="stylesheet" href="/index/css/update_stu_tch.css" media="screen" type="text/css" />
</head>

<body>
    <br>
    <br>
    <div class="login-card" style="width: 350px;">
        <h2>Update Student Data</h2>
        <br>
        <form method="post">
            <input type="text" id="regn_no" placeholder="Registration Number" required>
            <input type="email" id="emailAddress" name="email" placeholder="Email ID" required>
            <input type="text" id="f_name" name="first_name" placeholder="First Name" required>
            <input type="text" id="l_name" name="last_name" placeholder="Last Name" required>
            <input type="date" id="dob" name="DOB" placeholder="Date of Birth" style="color: gray;" required>
            <select id="dept" name="department" style="color: gray;" required>
                <option value="" disabled selected>Department</option>
                <option value="BCA">BCA</option>
                <option value="BBA">BBA</option>
            </select>
            <select id="adm_year" name="admission_year" style="color: gray;" required>
                <option value="" disabled selected>Admission Year</option>
                <option value="2015">2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
            </select>
            <input type="number" maxlength="10" id="contact" name="contact" placeholder="Phone NUmber" required>
            <input type="submit" value="Update" class="login login-submit">
        </form>
        </div>
</body>

</html>